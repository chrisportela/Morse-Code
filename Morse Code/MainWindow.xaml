<Window x:Class="Morse_Code.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Morse Code Converter" Height="350" Width="525">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0">Text to convert </TextBlock>
        <TextBox x:Name="txtCode" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Margin="10"></TextBox>
        <Button x:Name="btnConvertToCode" Click="btnConvert" Grid.Row="1" Grid.Column="1" Margin="20" Padding="5">Convert and Copy</Button>
    </Grid>
</Window>
